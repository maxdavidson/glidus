{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "js",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "typings",
    "strictNullChecks": true,
    "preserveConstEnums": false
  },
  "include": [
    "src/**/*"
  ]
}
